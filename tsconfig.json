{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "noEmitOnError": true,
    "paths": {
      "@customTypes/core": ["src/types/core.ts"],
      "@customTypes/teams": ["src/types/teams.ts"],
      "@customTypes/matches": ["src/types/matches.ts"],
      "@customTypes/db": ["src/types/db.ts"],
      "@customTypes/browser": ["src/types/browser.ts"],
      "@customTypes/fs": ["src/types/fs.ts"]
    },
    "lib": ["DOM", "ESNext"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
